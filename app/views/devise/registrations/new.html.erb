<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='form-head'>
    <%= link_to root_path do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>


    <h2>REGISTER</h2>
    <div class="actions">
    <%= f.submit "Next", class: 'btn', style: 'color:white; background-color:transparent;'%>
  </div>
  </div>
  <div class="form-floating">
  <%= f.text_field :name, class: 'form-control', id: 'floatingInput', placeholder: 'Full name' %>
  <%= f.label :name, "Full name", class: 'form-label', for: 'floatingInput' %>
</div>

  <div class="form-floating">
  <%= f.email_field :email, class: 'form-control', id: 'floatingInput', placeholder: 'name@example.com' %>
  <%= f.label :email, "Email address", class: 'form-label', for: 'floatingInput' %>
</div>

  <div class="form-floating">
  <%= f.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: 'Password' %>
  <%= f.label :password, "Password", class: 'form-label', for: 'floatingPassword' %>
  </div>

  <div class="form-floating mb-3">
  <%= f.password_field :password_confirmation, class: 'form-control', id: 'floatingPassword', placeholder: 'Confirm password' %>
  <%= f.label :password_confirmation, "Confirm password", class: 'form-label', for: 'floatingPassword' %>
  </div>
<% end %>

